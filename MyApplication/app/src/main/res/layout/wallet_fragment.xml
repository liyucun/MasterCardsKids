<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_background">
    <TextView
        android:id="@+id/wallet_text_title"
        android:text="WALLET"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>
    <LinearLayout
        android:id="@+id/wallet_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:id="@+id/allowance_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/allowance_text"
                android:text="ALLOWANCE"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/allowance_record"
                android:text="00.00"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:id="@+id/educash_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/educash_text"
                android:text="Edu Cash"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/educash_record"
                android:text="00.00"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>